{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:default",
    "shell:allow-open",
    "http:default",
    "http:allow-fetch",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-create",
    "fs:allow-exists",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://openrouter.ai/*"
        },
        {
          "url": "https://plex.tv/*"
        },
        {
          "url": "http://localhost:*"
        }
      ]
    }
  ]
}
