{
  "build": {
    "beforeBuildCommand": "TAURI=true npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "AI Playlist Generator",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://localhost:*"]
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "scope": ["$APPDATA/*", "$APPCONFIG/*"]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "minimize": true,
        "maximize": true,
        "show": true,
        "unmaximize": true,
        "unminimize": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.yourcompany.ai-playlist-generator",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "width": 1200,
        "resizable": true,
        "title": "AI Playlist Generator",
        "minHeight": 600,
        "minWidth": 800
      }
    ]
  }
}
